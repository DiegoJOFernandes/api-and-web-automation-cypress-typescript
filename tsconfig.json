{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["cypress/e2e/api/*"]
    },
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["cypress", "node", "cypress-plugin-api"]
  },
  "include": ["cypress/**/*.ts"]
}
